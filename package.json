{
  "name": "otp-generator",
  "description": "OTP Generator based on Phone number.",
  "version": "1.0.0",
  "dependencies": {
    "axios": "^0.24.0",
    "concurrently": "^6.4.0",
    "cors": "^2.8.5",
    "dotenv": "^11.0.0",
    "express": "^4.17.1",
    "moment": "^2.29.1",
    "mysql2": "^2.3.3",
    "npm-watch": "^0.11.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^6.2.1",
    "react-scripts": "^5.0.0",
    "react-toastify": "^8.1.0",
    "sequelize": "^6.9.0"
  },
  "scripts": {
    "watch": "npm-watch",
    "server": "nodemon ./server/src/index.js",
    "start": "react-scripts start",
    "dev": "concurrently \"npm run server\" \"npm run watch\"",
    "build": "react-scripts build"
  },
  "watch": {
    "build": {
      "patterns": [
        "src"
      ],
      "extensions": "js,jsx"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
